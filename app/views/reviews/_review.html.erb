<div id="<%= dom_id review %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= review.date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Response:</strong>
    <%= review.response %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Review:</strong>
    <%= review.review %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this review", review, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this review', edit_review_path(review), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
